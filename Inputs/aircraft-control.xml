<?xml version="1.0"?>

<PropertyList>
	<name>control</name>
	<dialog-name>aircraft-control</dialog-name>
	<x>10</x>
	<y>30</y>
	<layout>vbox</layout>
	    <group>
		    <layout>hbox</layout>
		    <default-padding>1</default-padding>
		    <empty>
		    <stretch>true</stretch>
		    </empty>
		    <text>
			<label>Main</label>
			<halign>center</halign>
		    </text>
		    <empty>
		    <stretch>true</stretch>
		    </empty>
		    <button>
		    <legend/>
		    <key>Esc</key>
		    <pref-width>16</pref-width>
		    <pref-height>16</pref-height>
		    <border>2</border>
		    <command>dialog-apply</command>
		    <binding>
			<command>dialog-close</command>
		    </binding>
		    </button>
		    </group>
		    <hrule/> 
	    <group>
	    <layout>vbox</layout>
	    <text>
		<label>AIRCRAFT CONTROL</label>
		<halign>center</halign>
	    </text>
	    </group>
	    
	     
	     <group>
		<layout>hbox</layout>
		<button>
		    <legend>BATTERY</legend>
		    <halign>left</halign>
		<binding>
		    <command>property-assign</command>
		    <property>fdm/jsbsim/electrical/switch/battery</property>
		    <value>1</value>
		</binding>
                </button>
		 <checkbox>
		     <halign>right</halign>
		     <property>fdm/jsbsim/electrical/switch/battery</property>
		    <live>true</live>
		 </checkbox>	
	    </group>
	    <group>
		<layout>hbox</layout>
		<button>
		     <legend>MASTER</legend>
		    <halign>left</halign>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/propulsion/engine[0]/magnetos</property>
			<value>3</value>
		    </binding>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/animation/master-switch-lock-cmd</property>
			<value>1</value>
		    </binding>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/animation/master-switch-cmd</property>
			<value>1</value>
		    </binding>
                </button>
		 <checkbox>
		     <halign>right</halign>
		     <property>fdm/jsbsim/electrical/switch/master</property>
			<live>true</live>
		 </checkbox>	
	    </group>
	     <hrule/>
	    
	    <group>
		<layout>hbox</layout>
		<button>
		     <legend>START</legend>
		    <live>true</live>
		     <halign>left</halign>
		    <enable>		    
			<property>fdm/jsbsim/electrical/switch/master</property>		  
		    </enable>
		    <binding>
			<command>nasal</command>
			<script>
			    var start_engine = func{
			    setprop("fdm/jsbsim/propulsion/engine[0]/starter", 1);
			    interpolate("fdm/jsbsim/propulsion/engine[0]/starter", 0, 3.0); }
			    start_engine();
			</script>
		    </binding>	
		    <binding>
			<command>property-assign</command>
			<property>sim/model/engine-mixture-rich</property>
			<value>1</value>
		    </binding>
		     <binding>
			<command>property-assign</command>
			<property>sim/model/engine-mixture-lean</property>
			<value>0</value>
		    </binding>
                </button>
		<button>
		     <legend>STOP/INIT</legend>
		     <halign>right</halign>		      
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/propulsion/engine[0]/magnetos</property>
			<value>0</value>
		    </binding>		    
		     <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/electrical/switch/battery</property>
			<value>0</value>
		    </binding>
		     <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/electrical/switch/master</property>
			<value>0</value>
		    </binding>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/animation/master-switch-cmd</property>
			<value>0</value>
		    </binding>
		     <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/animation/master-switch-lock-cmd</property>
			<value>0</value>
		    </binding>
                </button>
		</group>
		<group>
                <layout>hbox</layout>
		<button>
		     <legend>ROTOR BRAKE</legend>
		    <halign>left</halign>
		     <binding>
                        <command>property-toggle</command>
			<property>fdm/jsbsim/animation/rotor_brake-switch-cmd</property>
		    </binding>
		     <binding>
			<command>property-toggle</command>
			<property>fdm/jsbsim/animation/rotor_brake-switch-lock-cmd</property>
		    </binding>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/fcs/wing-fold-cmd</property>
			<value>0</value>
		    </binding>
		 </button>   
		<checkbox>
		    <property>fdm/jsbsim/animation/rotor_brake-switch-cmd</property>
		    <command>dialog-apply</command>
		    <live>true</live>
		    <halign>right</halign>
                </checkbox>
	    </group>
		<group>
                <layout>hbox</layout>
		<button>
		     <legend>ROTOR CLUTCH</legend>
		    <halign>left</halign>
		     <binding>
                        <command>property-toggle</command>
			<property>fdm/jsbsim/animation/rotor_clutch-switch</property>
		    </binding>
		 </button>   
		<checkbox>
		    <property>fdm/jsbsim/animation/rotor_clutch-switch</property>
		    <command>dialog-apply</command>
		    <live>true</live>
		    <halign>right</halign>
                </checkbox>
	    </group>
	     <hrule/>   
	     <group>
                <layout>vbox</layout>
                <text>
                    <label>MIXTURE Auto</label>
                    <halign>center</halign>
                </text>
            </group>
	    <group>
                <layout>table</layout>
		<text>
		    <label>Auto Rich</label>
		    <halign>left</halign>
		    <row>1</row>
                    <col>0</col>
		</text>
                <radio>
		    <row>1</row>
                    <col>1</col>
		    <property>sim/gui/dialogs/HUP/engine-mixture-rich</property>
		    <command>dialog-apply</command>
		    <live>true</live>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/fcs/mixture-cmd-norm</property>
			<value>1</value>
		    </binding>
                </radio>
		    <text>
		    <label>Auto Lean</label>
		    <halign>left</halign>
		    <row>2</row>
                    <col>0</col>
		</text>
                <radio>
		    <row>2</row>
                    <col>1</col>
		    <property>sim/gui/dialogs/HUP/engine-mixture-lean</property>
		    <command>dialog-apply</command>
		    <live>true</live>
		    <binding>
			<command>property-assign</command>
			<property>fdm/jsbsim/fcs/mixture-cmd-norm</property>
			<value>0.99</value>
		    </binding>
                </radio>
	    </group>	
	     <hrule/>
	      <group>
		    <layout>hbox</layout>
		    <halign>left</halign>
		    <text>
			<label>Engine RPM</label>
		    </text>
		    <input>
		    <live>true</live>
		    <halign>right</halign>
		    <property>fdm/jsbsim/propulsion/engine[0]/engine-rpm</property>
		    <x>10</x>
		    <y>10</y>
		    <color>
			<red>1.0</red>
			<green>0.80</green>
			<blue>0.80</blue>
		    </color>
		    </input>
		</group>
	     <hrule/>
	    <group>
		<layout>table</layout>
		 
		<button>
		    <legend>Brake-Parking</legend>
		    <halign>left</halign>
		    <row>2</row>
		    <col>0</col>
		    <binding>
			<command>property-toggle</command>
			<property>fdm/jsbsim/fcs/brake-parking-cmd-norm</property>
		    </binding>
		</button>
		<checkbox>
		    <row>2</row>
		    <col>1</col>
		    <property>fdm/jsbsim/fcs/brake-parking-cmd-norm</property>
		    <live>true</live>
		</checkbox>
		<button>
		    <legend>Landing-Light</legend>
		    <halign>left</halign>
		    <row>4</row>
		<col>0</col>
		<binding>
			<command>property-toggle</command>
			<property>fdm/jsbsim/electrical/lighting/landing-lights</property>
		    </binding>
		</button>
		<checkbox>
		    <row>4</row>
		    <col>1</col> 
		    <property>fdm/jsbsim/electrical/lighting/landing-lights</property>
		    <live>true</live>
		</checkbox>
		  <button>
		    <legend>O/C Hatch</legend>
			<halign>left</halign>
			<row>6</row>
		    <col>0</col>
		    <binding>
			<command>property-toggle</command>
			<property>fdm/jsbsim/animation/cockpit-hatch-cmd-norm</property>
		    </binding>
		</button>
		<checkbox>
			<row>6</row>
			<col>1</col>
			<property>fdm/jsbsim/animation/animation/cockpit-hatch-cmd-norm</property>
			<live>true</live>
		    </checkbox>	
		   <!-- <button>
		    <legend>O/C Left Cabin Door</legend>
			<halign>left</halign>
			<row>7</row>
		    <col>0</col>
		    <binding>
			<command>property-toggle</command>
			<property>fdm/jsbsim/animation/cabine-left-door-cmd-norm</property>
		    </binding>
		</button>
		<checkbox>
			<row>7</row>
			<col>1</col>
			<property>fdm/jsbsim/animation/cabine-left-door-cmd-norm</property>
			<live>true</live>
		    </checkbox>		  -->
		   <!--  <button>
		    <legend>O/C Cockpit Windows</legend>
			<halign>left</halign>
			<row>8</row>
		    <col>0</col>
		    <binding>
			<command>property-toggle</command>
			<property>fdm/jsbsim/animation/cockpit-window-cmd-norm</property>
		    </binding>
		</button>
		<checkbox>
			<row>8</row>
			<col>1</col>
			<property>fdm/jsbsim/animation/cockpit-window-cmd-norm</property>
			<live>true</live>
		    </checkbox>		    -->
	    </group>	   <group>
                <layout>hbox</layout>
		<button>
		     <legend>ROTOR FOLD</legend>
		    <halign>left</halign>
		     <binding>
                        <command>property-toggle</command>
			<property>fdm/jsbsim/fcs/wing-fold-cmd</property>
		    </binding>
		 </button>   
		<checkbox>
		    <property>fdm/jsbsim/fcs/wing-fold-cmd</property>
		    <command>dialog-apply</command>
		    <live>true</live>
		    <halign>right</halign>
                </checkbox>
	    </group>	    
	<hrule/>
	    <group>
		<layout>hbox</layout>
		<halign>center</halign>
		<text>
		<label>=PITCH-POSTIONING=</label>
		</text>
		</group>
		 <group>
		    <layout>hbox</layout>
		    <halign>left</halign>
		    <text>
			<label>bias</label>
		    </text>
		    <input>
		    <live>true</live>
		    <halign>right</halign>
		    <property>fdm/jsbsim/fcs/pitch-trim-positionner</property>
		    <x>10</x>
		    <y>10</y>
		    <color>
			<red>1.0</red>
			<green>0.80</green>
			<blue>0.80</blue>
		    </color>
		    </input>
		</group>
		<group>
		<layout>hbox</layout>
		<halign>center</halign>
		<button>
		    <legend>--UP--</legend>
		<binding>
		    <command>property-adjust</command>
		    <property>fdm/jsbsim/fcs/pitch-trim-positionner</property>
		    <min type="double">-0.016</min>
		    <max type="double">0.016</max>
		    <step type="double">-0.00034906585</step>
		</binding>                
		</button>
		    <button>
		    <legend>DOWN</legend>		   
		    <binding>
		    <command>property-adjust</command>
		    <property>fdm/jsbsim/fcs/pitch-trim-positionner</property>
		    <min type="double">-0.016</min>
		    <max type="double">0.016</max>
		    <step type="double">0.00034906585</step>
		</binding>
		</button>
	    </group>
	<hrule/>
	    
	     
	 
</PropertyList>
